public class GenericExceptionCatchRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.stmt.CatchClause.class)
          .forEach(c -> {
            if (c.getParameter().getType().asString().equals("Exception")) {
                int line = c.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "CRITICAL", "Catching generic Exception"));
            }
        });
        return results;
    }
}
