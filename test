public class GodClassRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.ClassOrInterfaceDeclaration.class)
          .forEach(c -> {
            if (c.getMethods().size() > 20) {
                int line = c.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Class has too many methods"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 16 â€“ TODO Comment
Java
Copy code
public class TodoCommentRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.getAllContainedComments().forEach(c -> {
            if (c.getContent().toUpperCase().contains("TODO")) {
                int line = c.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "INFO", "TODO comment found"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 17 â€“ Deprecated API Usage
Java
Copy code
public class DeprecatedUsageRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.MethodDeclaration.class)
          .forEach(m -> {
            if (m.isAnnotationPresent(Deprecated.class)) {
                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Deprecated method usage"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 18 â€“ Missing @Override
Java
Copy code
public class MissingOverrideRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.MethodDeclaration.class)
          .forEach(m -> {
            if (m.isPublic() && m.getAnnotations().isEmpty()
                && m.getNameAsString().equals("toString")) {

                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "INFO", "Missing @Override annotation"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 19 â€“ Boolean Method Naming
Java
Copy code
public class BooleanMethodNamingRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.MethodDeclaration.class)
          .forEach(m -> {
            if (m.getType().asString().equals("boolean")
                && !m.getNameAsString().matches("^(is|has|can).*")) {

                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Boolean method naming violation"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 20 â€“ Empty Class
Java
Copy code
public class EmptyClassRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.ClassOrInterfaceDeclaration.class)
          .forEach(c -> {
            if (c.getMembers().isEmpty()) {
                int line = c.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "INFO", "Empty class detected"));
            }
        });
        return results;
    }
}
