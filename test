public class PrintStackTraceRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.expr.MethodCallExpr.class)
          .forEach(m -> {
            if (m.getNameAsString().equals("printStackTrace")) {
                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "MAJOR", "Avoid printStackTrace()"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 9 â€“ Hardcoded Password (basic)
Java
Copy code
public class HardcodedPasswordRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.expr.StringLiteralExpr.class)
          .forEach(s -> {
            if (s.getValue().toLowerCase().contains("password")) {
                int line = s.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "CRITICAL", "Possible hardcoded password"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 10 â€“ == Used for String
Java
Copy code
public class StringEqualityRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.expr.BinaryExpr.class)
          .forEach(b -> {
            if (b.getOperator().asString().equals("==")
                && b.toString().contains("\"")) {

                int line = b.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "MAJOR", "Use equals() for String comparison"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 11 â€“ Unused Import
Java
Copy code
public class UnusedImportRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.getImports().forEach(i -> {
            if (!i.isUsed()) {
                int line = i.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "INFO", "Unused import"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 12 â€“ Wildcard Import
Java
Copy code
public class WildcardImportRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.getImports().forEach(i -> {
            if (i.isAsterisk()) {
                int line = i.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Avoid wildcard imports"));
            }
        });
        return results;
    }
}
