ğŸ“¦ RULE 1 â€“ Empty Method Rule
Java
Copy code
package com.review;

import com.github.javaparser.ast.CompilationUnit;
import com.github.javaparser.ast.body.MethodDeclaration;
import java.util.*;

public class EmptyMethodRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(MethodDeclaration.class).forEach(m -> {
            if (m.getBody().isPresent() && m.getBody().get().isEmpty()) {
                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(line, "MAJOR", "Empty method body"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 2 â€“ Long Parameter List
Java
Copy code
public class TooManyParametersRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.MethodDeclaration.class)
          .forEach(m -> {
            if (m.getParameters().size() > 5) {
                int line = m.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Method has too many parameters"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 3 â€“ Long Method Rule
Java
Copy code
public class LongMethodRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.body.MethodDeclaration.class)
          .forEach(m -> {
            m.getBody().ifPresent(b -> {
                if (b.getStatements().size() > 40) {
                    int line = m.getBegin().map(p -> p.line).orElse(-1);
                    results.add(new ReviewResult(
                        line, "WARNING", "Method too long (>40 statements)"));
                }
            });
        });
        return results;
    }
}
ğŸ“¦ RULE 4 â€“ Empty IF Block
Java
Copy code
public class EmptyIfBlockRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.stmt.IfStmt.class)
          .forEach(i -> {
            if (i.getThenStmt().isEmptyStmt()) {
                int line = i.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "MAJOR", "Empty if block detected"));
            }
        });
        return results;
    }
}
ğŸ“¦ RULE 5 â€“ Empty ELSE Block
Java
Copy code
public class EmptyElseBlockRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.stmt.IfStmt.class)
          .forEach(i -> {
            i.getElseStmt().ifPresent(e -> {
                if (e.isEmptyStmt()) {
                    int line = i.getBegin().map(p -> p.line).orElse(-1);
                    results.add(new ReviewResult(
                        line, "WARNING", "Empty else block"));
                }
            });
        });
        return results;
    }
}
ğŸ“¦ RULE 6 â€“ Nested IF Depth
Java
Copy code
public class DeepNestingRule implements ReviewRule {

    public List<ReviewResult> apply(CompilationUnit cu) {
        List<ReviewResult> results = new ArrayList<>();

        cu.findAll(com.github.javaparser.ast.stmt.IfStmt.class)
          .forEach(i -> {
            long depth = i.findAll(com.github.javaparser.ast.stmt.IfStmt.class).size();
            if (depth > 3) {
                int line = i.getBegin().map(p -> p.line).orElse(-1);
                results.add(new ReviewResult(
                    line, "WARNING", "Deeply nested if statements"));
            }
        });
        return results;
    }
}
